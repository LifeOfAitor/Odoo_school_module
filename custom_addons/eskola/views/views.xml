<odoo>
  <data>

<!-- Ikasleak -->

    <record id="view_eskola_form" model="ir.ui.view">
      <field name="name">eskola.form</field>
      <field name="model">eskola.ikasle</field>
      <field name="arch" type="xml">
        <form string="Eskola">
          <sheet>
            <group col="2">
              <field name="image" widget="image" height="128" width="128"/>
              <field name="name"/>
              <field name="surname"/>
              <field name="ikasle_age"/>
              <field name="ikasle_day_of_birth"/>
              <field name="ikasle_gender"/>
              <field name="ziklo_id"/>
              <field name="gela_id"/>
            </group>
            <notebook>
              <page string="Ekipoa">
                <field name="ekipo_ids" label="Ikaslearen ekipoa" widget="many2many_tags"/>
              </page>
              <page string="Faltak">
                <field name="falta_ids" nolabel="1"/>
              </page>
              <page string="Notak">
                <field name="nota_ids" nolabel="1"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_eskola_list" model="ir.ui.view">
      <field name="name">eskola.list</field>
      <field name="model">eskola.ikasle</field>
      <field name="arch" type="xml">
        <list string="Ikasleak">
          <field name="name"/>
          <field name="surname"/>
          <field name="ikasle_age"/>
          <field name="ikasle_day_of_birth"/>
          <field name="ikasle_gender"/>
          <field name="ziklo_id"/>
          <field name="gela_id"/>
        </list>
      </field>
    </record>

    <record id="view_eskola_kanban" model="ir.ui.view">
      <field name="name">eskola.kanban</field>
      <field name="model">eskola.ikasle</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="image"/>
          <field name="name"/>
          <field name="ikasle_age"/>
          <field name="ikasle_gender"/>
          <templates>
            <t t-name="card">
              <div gela="oe_kanban_global_click o_kanban_record_has_image_fill">
                <div gela="o_kanban_image">
                  <field name="image" widget="image" alt="Ikaslearen argazkia" width="128" height="128"/>
                </div>
                <div gela="o_kanban_details">
                  <strong><t t-esc="record.name.value"/></strong>
                  <div><t t-esc="record.ikasle_age.value"/></div>
                  <div><t t-esc="record.ikasle_gender.value"/></div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Action View -->
    <record id="action_view_ikasle" model="ir.actions.act_window">
      <field name="name">Ikasleak</field>
      <field name="res_model">eskola.ikasle</field>
      <field name="view_mode">kanban,list,form</field>
    </record>

<!-- Notak -->

    <record id="view_eskola_nota_list" model="ir.ui.view">
      <field name="name">eskola.nota.list</field>
      <field name="model">eskola.nota</field>
      <field name="arch" type="xml">
        <list string="Notak">
          <field name="ikasle_id"/>
          <field name="ziklo_id"/>
          <field name="ikasgai_id"/>
          <field name="mark"/>
        </list>
      </field>
    </record>

    <record id="view_eskola_nota_form" model="ir.ui.view">
      <field name="name">eskola.nota.form</field>
      <field name="model">eskola.nota</field>
      <field name="arch" type="xml">
        <form string="Nota">
          <sheet>
            <group>
              <field name="ikasle_id"/>
              <field name="ziklo_id" invisible="1"/>
              <field name="ikasgai_id" domain="[('ziklo_id', '=', ziklo_id)]"/>
              <field name="mark"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action View -->
    <record id="action_view_nota" model="ir.actions.act_window">
      <field name="name">Notak</field>
      <field name="res_model">eskola.nota</field>
